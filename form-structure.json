{
  "sections": [
    {
      "title": "Clinical Question (check all that apply)",
      "fields": [
        {
          "id": "cq",
          "label": "Reason for Scan",
          "type": "checkbox-group",
          "options": [
            "Hemodynamic instability",
            "LV Evaluation",
            "RV Evaluation",
            "Pulmonary Pressure Evaluation",
            "Volume Status",
            "Valvulopathy",
            "Training",
            "Cardiac Arrest/Peri-arrest"
          ]
        }
      ]
    },
    {
      "title": "Parasternal Long-Axis View (at Left Ventricle)",
      "fields": [
        {
          "id": "plax_eff",
          "label": "Pericardial effusion (at 20cm - end-diastole)",
          "type": "select",
          "options": ["None", "<0.5cm", "0.5-2cm", ">2cm"]
        },
        {
          "id": "plax_mr",
          "label": "Mitral valve regurgitation",
          "type": "select",
          "options": ["None visualised", "Present"]
        },
        {
          "id": "plax_mr_vc",
          "label": "Mitral Vena Contracta",
          "type": "select",
          "options": ["N/A", "<3mm (mild)", "3-7mm (Indeterminant)", ">7mm (Severe)"]
        },
        {
          "id": "plax_ar",
          "label": "Aortic valve regurgitation",
          "type": "select",
          "options": ["None visualised", "Present"]
        },
        {
          "id": "plax_ar_vc",
          "label": "Aortic Vena Contracta",
          "type": "select",
          "options": ["N/A", "<3mm (mild)", "3-6mm (Indeterminant)", ">6mm (Severe)"]
        },
        {
          "id": "plax_ar_jw_lvot",
          "label": "Jet-width:LVOT diameter",
          "type": "select",
          "options": ["N/A", "<25% (mild)", "25-65% (Moderate)", ">65% (Severe)"]
        },
        {
          "id": "plax_lvot_d",
          "label": "LVOT Diameter (cm)",
          "type": "text",
          "placeholder": "Enter measurement"
        },
        {
          "id": "plax_av_leaflets",
          "label": "Aortic valve leaflets",
          "type": "select",
          "options": ["Thin unrestricted", "Calcific restricted"]
        },
        {
          "id": "plax_av_macs",
          "label": "Maximal Aortic Cusp Separation (MACS)",
          "type": "select",
          "options": ["N/A", "<1.2cm", ">1.2cm"]
        },
        {
          "id": "plax_lv_edd",
          "label": "LV End-Diastolic Diameter",
          "type": "select",
          "options": ["35-55mm (Normal)", "<35mm (Small)", ">55mm (Dilated)"]
        }
      ]
    },
    {
      "title": "Parasternal Short-Axis View (Mid-Papillary LV)",
      "fields": [
        {
          "id": "psax_septum",
          "label": "RV Septal Flattening",
          "type": "select",
          "options": ["None", "During Systole", "During Diastole", "Fixed"]
        },
        {
          "id": "psax_lv_collapse",
          "label": "LV Systolic Collapse (Papillary muscles touching)",
          "type": "select",
          "options": ["No", "Yes"]
        },
        {
            "id": "rwma_section",
            "label": "17-Segment Regional Wall Motion",
            "type": "rwma-grid"
        }
      ]
    },
    {
      "title": "POCUS Summary Findings: Valves",
      "fields": [
        {
          "id": "sum_v_tri",
          "label": "Tricuspid Valve",
          "type": "select",
          "options": ["Normal", "Regurgitation", "Marked regurgitation"]
        },
        {
          "id": "sum_v_mit",
          "label": "Mitral Valve",
          "type": "select",
          "options": ["Normal", "Regurgitation", "Marked regurgitation"]
        },
        {
          "id": "sum_v_aor",
          "label": "Aortic Valve",
          "type": "select",
          "options": ["Normal", "Regurgitation", "Marked regurgitation", "Stenosis", "Marked stenosis"]
        }
      ]
    },
    {
      "title": "HAEMODYNAMIC STATE (Check Primary)",
      "fields": [
        {
          "id": "sum_haemo",
          "label": "Haemodynamic State",
          "type": "checkbox-group",
          "options": [
            "Hypovolaemia",
            "LV systolic failure",
            "RV systolic failure",
            "Vasoplegia",
            "Obstructive shock",
            "LVOTO/SAM"
          ]
        }
      ]
    }
  ]
}
