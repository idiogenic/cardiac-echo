{
  "superSections": [
    {
      "title": "Patient Information",
      "sections": [
        {
          "title": "Demographics",
          "fields": [
            { "id": "patient_name", "label": "Patient Name or Date of Birth (Secured)", "type": "text", "readonly": true, "placeholder": "LOCKED FOR SECURITY" },
            { "id": "patient_mrn", "label": "MRN (Secured)", "type": "text", "readonly": true, "placeholder": "LOCKED FOR SECURITY" },
            { "id": "operator", "label": "Operator", "type": "text" },
            { "id": "exam_date", "label": "Exam Date", "type": "date" },
            { "id": "med_history", "label": "Medical History", "type": "text" },
            { "id": "haemo_therapy", "label": "Haemodynamic therapy", "type": "text" },
            { "id": "ventilation", "label": "Ventilation", "type": "select", "options": ["Not Assessed", "Spontaneous", "Mechanical Ventilation"] },
            { "id": "img_quality", "label": "Image Quality", "type": "select", "options": ["Not Assessed", "Very Poor", "Poor", "Satisfactory", "Excellent"] }
          ]
        }
      ]
    },
    {
      "title": "Clinical Question",
      "sections": [
        {
          "title": "Reason for Scan",
          "fields": [
            { "id": "cq", "label": "Select all that apply", "type": "checkbox-group", "options": ["Hemodynamic instability", "LV Evaluation", "RV Evaluation", "Pulmonary Pressure Evaluation", "Volume Status", "Valvulopathy", "Training", "Cardiac Arrest/Peri-arrest"] }
          ]
        }
      ]
    },
    {
      "title": "Examination",
      "sections": [
        {
          "title": "Parasternal Long-Axis View (LV)",
          "fields": [
            { "id": "plax_eff", "label": "Pericardial effusion", "type": "select", "options": ["Not Assessed", "None", "<0.5cm", "0.5-2cm", ">2cm"] },
            { "id": "plax_mr", "label": "Mitral valve regurgitation", "type": "select", "options": ["Not Assessed", "None visualised", "Present"] },
            { "id": "plax_mr_vc", "label": "Vena Contracta (MV)", "type": "select", "options": ["Not Assessed", "N/A", "<3mm (mild)", "3-7mm (Indeterminant)", ">7mm (Severe)"] },
            { "id": "plax_ar", "label": "Aortic valve regurgitation", "type": "select", "options": ["Not Assessed", "None visualised", "Present"] },
            { "id": "plax_ar_vc", "label": "Vena Contracta (AV)", "type": "select", "options": ["Not Assessed", "N/A", "<3mm (mild)", "3-6mm (Indeterminant)", ">6mm (Severe)"] },
            { "id": "plax_lvot_d", "label": "LVOT diameter (cm)", "type": "text" },
            { "id": "plax_lv_edd", "label": "LV End-Diastolic Diameter", "type": "select", "options": ["Not Assessed", "35-55mm (Normal)", "<35mm (Small)", ">55mm (Dilated)"] }
          ]
        },
        {
          "title": "Parasternal Long-Axis View (RV Inflow)",
          "fields": [
            { "id": "plax_tr", "label": "Tricuspid valve regurgitation", "type": "select", "options": ["Not Assessed", "None visualised", "Present"] },
            { "id": "plax_tr_vel", "label": "TR Jet peak velocity (m/s)", "type": "number" },
            { "id": "plax_rvsp", "label": "Calculated RVSP (mmHg)", "type": "number", "calculation": "4 * Math.pow(plax_tr_vel, 2)", "readonly": true }
          ]
        },
        {
          "title": "Apical Four Chamber View",
          "fields": [
            { "id": "ap_tapse_val", "label": "TAPSE measurement (mm)", "type": "number" },
            { "id": "ap_rv_fac", "label": "RV fractional area change", "type": "select", "options": ["Not Assessed", ">35% (normal)", "<35% (Reduced)", "<17% (Severely reduced)"] },
            { "id": "ap_lv_ef", "label": "LV ejection fraction", "type": "select", "options": ["Not Assessed", ">50% (normal)", "40-50% (Mildly reduced)", "30-40% (Moderately reduced)", "<30% (severely reduced)"] }
          ]
        },
        {
          "title": "Subcostal View & IVC",
          "fields": [
            { "id": "sub_eff", "label": "Pericardial effusion", "type": "select", "options": ["Not Assessed", "None", "<0.5cm", "0.5-2cm", ">2cm"] },
            { "id": "sub_ivc_d", "label": "Subcostal IVC diameter", "type": "select", "options": ["Not Assessed", "<2.1cm", ">2.1cm"] }
          ]
        }
      ]
    },
    {
      "title": "Summary",
      "sections": [
        {
          "title": "POCUS Summary Findings",
          "fields": [
            { "id": "sum_lv_func", "label": "LV Systolic Function", "type": "select", "options": ["Not Assessed", "Normal", "Hyperdynamic", "Mild Dysfunction", "Moderate Dysfunction", "Severe Dysfunction"] },
            { "id": "sum_rv_func", "label": "RV Function", "type": "select", "options": ["Not Assessed", "Normal", "Decreased", "Cardiac Standstill"] },
            { "id": "sum_v_aor", "label": "Aortic Valve Summary", "type": "select", "options": ["Not Assessed", "Normal", "Regurgitation", "Stenosis"] },
            { "id": "general_comments", "label": "General Comments", "type": "textarea" }
          ]
        }
      ]
    }
  ]
}
